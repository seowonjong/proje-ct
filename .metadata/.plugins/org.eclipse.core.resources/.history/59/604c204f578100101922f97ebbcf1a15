				<%
				PreparedStatement pstmt = null;
				ResultSet rs = null;
				String resvdate = "";
				String newDate = "";

				try {
					String sql = "select em.empno, em.empname, re.resvdate, se.seatno, se.office, se.callno " + "from tbl_emp_2504 em "
					+ "join tbl_resv_2504 re " + "on em.empno = re.empno " + "join tbl_seat_2504 se "
					+ "on se.seatno = re.seatno and em.empno = ? " + "order by re.resvdate desc";

					pstmt = con.prepareStatement(sql);
					pstmt.setString(1, emptno);
					rs = pstmt.executeQuery();
					while (rs.next()) {
						resvdate = rs.getString(3);
						newDate = resvdate.substring(0, 4) + "년" + resvdate.substring(4, 6) + "월" + resvdate.substring(6, 8) + "일";
				%>
